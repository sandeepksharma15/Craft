<MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar>
                <MudImage Src="@ImageUrl" Alt="user"/>
            </MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body2">@Name</MudText>
            <MudText Typo="Typo.caption">@Role</MudText>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>
